import sys
import license_generator

if __name__ == '__main__':
    try:
        license_generator = license_generator.LicenseGenerator()
        license_generator.run_command(sys.argv)
    finally:
        exception = sys.exc_info()
        if exception[1] is not None:
            print(exception[1])
            exit(1)

